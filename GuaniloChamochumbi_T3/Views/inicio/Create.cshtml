







<form action="/Inicio/Create"  method="post">
    <div class="container">
        <label>Codigo_Registro</label>
        <input type="text" name="Codigo_Registro" class="form-control" />
    </div>
    <div class="container">
        <label>Fecha_Registro</label>
        <input type="date" name="Fecha_registro" class="form-control" />
    </div>
    <div class="container">
        <label>nombre de la mascota</label>
        <input type="text" name="Nombre_mascota" class="form-control" />
    </div>
    <div class="container">
        <label>nacimiento de la mascota</label>
        <input id="Fecha" min="" onkeydown="return false" type="date" name="Fecha_nacimiento" class="form-control" autocomplete="off" />
