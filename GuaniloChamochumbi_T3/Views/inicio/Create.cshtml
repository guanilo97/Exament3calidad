            <option value="@item.Id">@item.Nombre</option>
            //}
        }
    </select>
    <select name="Id_especie" class="form-control">
        <option value="">-- Selecciona --</option>
        @foreach (var item in ViewBag.especie)
        {

            <option value="@item.Id">@item.Nombre</option>
        }
    </select>
    <select name="Id_raza" class="form-control">
        <option value="">-- Selecciona--</option>
        @foreach (var item in ViewBag.raza)
        {

            <option value="@item.Id">@item.Nombre</option>
            //}
        }
    </select>
    <div class="container">
        <label>Tamañoa</label>
        <input type="text" name="Tamaño" class="form-control" />
    </div>
    <div class="container">
        <label>Datos</label>
        <textarea name="Datos_particulares" class="form-control"> </textarea>
    </div>
    <div class="container">
        <label>dueño</label>
        <input type="text" name="Nombre_dueño" class="form-control" />
    </div>
    <div class="container">
        <label>Direccion</label>
        <input type="text" name="Direccion" class="form-control" />
    </div>
    <div class="container">
        <label>telefono</label>
        <input type="text" name="telefono" class="form-control" />
    </div>
    <div class="container">
        <label>Email</label>
        <input type="text" name="Email" class="form-control" />
    </div>
    <button>Guardar</button>
    </form>
